<div style="position: absolute; right: 5px; padding: 5px">
  <% if current_user %>
    <div style="text-align: center; padding-top: 8px; padding-bottom: 8px; padding-left: 40px; padding-right: 40px; font-size: 100%; color: black; border-radius: 4px; border: solid black; text-shadow: 0 1px 1px rgba(0, 0, 0, 0.2); background: #f5faff">
      <%= current_user.username %>
    </div>
    <form method='post' action='/sessions'>
      <input type='hidden' name='_method' value='delete'>
      <input type="submit" value="Sign out" style="text-align: center; font-size: 100%; color: white; border-radius: 4px; text-shadow: 0 1px 1px rgba(0, 0, 0, 0.2); background: #99ccff; padding-top: 8px; padding-bottom: 8px; padding-left: 40px; padding-right: 40px; margin-top: 5px">
    </form>
  <% end %>
</div>

<div style="margin-left: 10px; font-weight: bold; font-size: 250%; float: left">
  chitter
</div>

<div style="position: absolute; left: 5px; padding: 5px; margin-top: 50px">
  <% if current_user %>
    <form action='/feed/new'>
      <input type="submit" value="New Peep" style="margin-left: 5px; text-align: center; font-size: 100%; color: white; border-radius: 4px; text-shadow: 0 1px 1px rgba(0, 0, 0, 0.2); background: #99ccff; width: 8em;  height: 2em;">
    </form>
  <% end %>
</div>

<div style="position: absolute; right: 5px; padding: 5px">
  <% unless current_user %>
    <form action='/'>
      <input type="submit" value="Sign in" style="text-align: center; font-size: 100%; color: white; border-radius: 4px; text-shadow: 0 1px 1px rgba(0, 0, 0, 0.2); background: #99ccff; width: 8em;  height: 2em;">
    </form>
  <% end %>
</div>

<div style="margin:0 auto; min-height: 100px; overflow: hidden; width:600px">
  <ul id="peeps" style="list-style-type: none">
    <% @peeps.reverse.each do |peep| %>
      <div style="text-align: center; display: inline-block; width: 415px; height: 170px; padding; background-image: url('/images/rsz_chitter-box.png'); background-repeat: no-repeat; word-wrap: break-word">
        <li>
          <div style="margin-top: 10px; margin-left: 10px; font-size: 90%; text-align: left; font-weight: bold">
            <%= peep.name %> 
              <div style="font-size: 80%; color: grey; display: inline-block; font-weight: normal"> 
                @<%= peep.username %> 
              </div> 
              <div style="font-size: 80%; color: black; display: inline-block; font-weight: normal; float: right; margin-right: 12px"> 
                <%= peep.time.strftime("%l:%M %p %A %d %b") %>
              </div> 
          </div>
          <div style="height: 120px; width: 400px; display: flex; justify-content: center; align-items: center">
            <%= peep.message %>
          </div>
        </li>
      </div>
    <% end %>
  </ul>
</div>
